<div class="container mt-5">
  <h2 class="text-center">Quên mật khẩu</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email", class: "control-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.submit "Gửi yêu cầu", class: "btn btn-warning btn-block" %>
    </div>
  <% end %>
  <div class="text-center mt-3">
    <%= link_to "Đã có tài khoản? Đăng nhập", new_user_session_path %>
  </div>
</div>
