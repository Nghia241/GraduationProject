<div class="container mt-5">
  <h2 class="text-center">Tạo tài khoản mới</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :name, "Họ và tên", class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email", class: "control-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Mật khẩu", class: "control-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Xác nhận mật khẩu", class: "control-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.submit "Đăng ký", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  <div class="text-center mt-3">
    <%= link_to "Đã có tài khoản? Đăng nhập", new_user_session_path %>
  </div>
</div>
