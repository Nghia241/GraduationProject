<div class="container mt-5">
  <h2 class="text-center">Đăng nhập</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email", class: "control-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Mật khẩu", class: "control-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.submit "Đăng nhập", class: "btn btn-success btn-block" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= link_to "Quên mật khẩu?", new_password_path(resource_name) %> |
    <%= link_to "Chưa có tài khoản? Đăng ký", new_registration_path(resource_name) %>
  </div>
</div>
