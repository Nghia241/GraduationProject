<div class="container d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card p-4 shadow-lg border-0" style="max-width: 400px; width: 100%;">
    <!-- Tiêu đề -->
    <h2 class="text-center mb-4 text-primary">Chào mừng bạn</h2>

    <!-- Form Đăng Nhập -->
    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "needs-validation" do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Tài khoản", class: "form-label fw-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample1@gmail.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Mật khẩu", class: "form-label fw-bold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "********" %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Đăng nhập", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>

    <!-- Đường dẫn khác -->
    <div class="mt-4 text-center">
      <%= link_to "Quên mật khẩu?", new_password_path(resource_name), class: "text-decoration-none text-muted" %><br>
      <%= link_to "Chưa có tài khoản? Đăng ký", new_registration_path(resource_name), class: "text-decoration-none text-primary" %>
    </div>
  </div>
</div>
