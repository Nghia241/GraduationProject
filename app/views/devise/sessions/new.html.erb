<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4 shadow" style="width: 400px;">
    <h2 class="text-center mb-4">Trang chủ</h2>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true, class: "needs-validation" do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Tài khoản", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample1@gmail.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Mật khẩu", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "********" %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Đăng nhập", class: "btn btn-success btn-block" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= link_to "Quên mật khẩu?", new_password_path(resource_name), class: "text-decoration-none" %><br>
      <%= link_to "Chưa có tài khoản? Đăng ký", new_registration_path(resource_name), class: "text-decoration-none" %>
    </div>
  </div>
</div>
