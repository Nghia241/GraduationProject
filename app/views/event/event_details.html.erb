<div class="container mt-4">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <!-- Tiêu đề và nút tạo mới -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary text-center mb-4">
          <i class="fas fa-calendar-check me-2"></i>DANH SÁCH SỰ KIỆN THAM GIA
        </h2>
        <% if current_user.system_role_id != 3 %>
          <a href="<%= new_event_path %>" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo mới
          </a>
        <% end %>
      </div>

      <!-- Form tìm kiếm -->
      <div class="card mb-3">
        <div class="card-body">
          <%= search_form_for @q, url: event_details_event_index_path, method: :get, class: "row g-3" do |f| %>
            <div class="col-md-9">
              <%= f.label :name_cont, "Tên sự kiện", class: "form-label visually-hidden" %>
              <%= f.search_field :name_cont, placeholder: "Tìm kiếm...", class: "form-control" %>
            </div>
            <div class="col-md-3 text-end">
              <%= f.submit "Tìm kiếm", class: "btn btn-primary w-100" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Bảng danh sách sự kiện -->
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead class="table-light">
          <tr>
            <th class="text-center" style="width: 50px;">STT</th>
            <th>Tên sự kiện</th>
            <th>Địa chỉ</th>
            <th class="text-center" style="width: 150px;">Hành động</th>
          </tr>
          </thead>
          <tbody>
          <% @events.each_with_index do |event, index| %>
            <tr>
              <td class="text-center align-middle"><%= index + 1 %></td>
              <td class="align-middle"><%= event.name %></td>
              <td class="align-middle"><%= event.location %></td>
              <td class="text-center align-middle">
                <a href="<%= event_path(event) %>" class="btn btn-secondary btn-sm">
                  <i class="bi bi-eye"></i> Chi tiết
                </a>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <!-- Phân trang -->
      <div class="d-flex justify-content-center mt-3">
        <%= paginate @events %>
      </div>
    </div>
  </div>
</div>
