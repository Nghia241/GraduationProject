<div class="container mt-4">
  <div class="row">
    <div class="col-md-9">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h5>Danh sách sự kiện tham gia</h5>
        <% if current_user.system_role_id != 3 %>
          <a class="btn btn-primary" href="<%= new_event_path %>">Tạo mới</a>
        <% end %>
      </div>

      <!-- Form tìm kiếm -->
      <div class="mb-3">
        <%= search_form_for @q, url: event_details_event_index_path, method: :get, class: "form-inline" do |f| %>
          <div class="form-group mr-2">
            <%= f.label :name_cont, "Tên sự kiện", class: "sr-only" %>
            <%= f.search_field :name_cont, placeholder: "Tìm kiếm...", class: "form-control" %>
          </div>
          <div class="d-flex justify-content-end align-items-center">
            <%= f.submit "Tìm kiếm", class: "btn btn-primary mt-3" %>
          </div>
        <% end %>
      </div>

      <!-- Bảng danh sách sự kiện -->
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>STT</th>
          <th>Tên sự kiện</th>
          <th>Địa chỉ</th>
          <th>Hành động</th>
        </tr>
        </thead>
        <tbody>
        <% @events.each_with_index do |event, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= event.name %></td>
            <td><%= event.location %></td>
            <td>
              <a href="<%= event_path(event) %>" class="btn btn-secondary">Chi tiết</a>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="mt-3">
        <%= paginate @events %>
      </div>
    </div>
  </div>
</div>
