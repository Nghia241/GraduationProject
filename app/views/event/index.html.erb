<div class="container mt-5">
  <div class="row">
    <div class="col-md-9">
      <!-- Tiêu đề và nút tạo mới -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-calendar-alt me-2"></i>Danh Sách Toàn Bộ Sự Kiện</h2>
        <% if current_user.system_role_id != 3 %>
          <a class="btn btn-primary" href="<%= new_event_path %>">
            <i class="fas fa-plus me-1"></i> Tạo mới
          </a>
        <% end %>
      </div>

      <!-- Form tìm kiếm -->
      <div class="mb-4">
        <%= search_form_for @q, url: event_index_path, method: :get, html: { class: "d-flex align-items-center" } do |f| %>
          <div class="input-group">
            <span class="input-group-text bg-light"><i class="fas fa-search"></i></span>
            <%= f.text_field :name_cont, class: "form-control", placeholder: "Tìm kiếm tên sự kiện" %>
            <button class="btn btn-secondary">
              <i class="fas fa-search"></i> Tìm kiếm
            </button>
          </div>
        <% end %>
      </div>

      <!-- Bảng danh sách sự kiện -->
      <div class="table-responsive shadow-sm">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
          <tr>
            <th>#</th>
            <th><i class="fas fa-tag"></i> Tên sự kiện</th>
            <th><i class="fas fa-map-marker-alt"></i> Địa chỉ</th>
            <th class="text-center"><i class="fas fa-cogs"></i> Hành động</th>
          </tr>
          </thead>
          <tbody>
          <% @events.each_with_index do |event, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= event.name %></td>
              <td><%= event.location %></td>
              <td class="text-center">
                <a href="<%= event_path(event) %>" class="btn btn-secondary btn-sm">
                  <i class="fas fa-eye"></i> Chi tiết
                </a>
                <% if current_user.system_role_id == 1 %>
                  <%= link_to event_path(event), method: :delete, data: { confirm: 'Bạn có chắc chắn muốn xóa?' }, class: 'btn btn-danger btn-sm' do %>
                    <i class="fas fa-trash-alt"></i> Xóa
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <!-- Phân trang -->
      <div class="mt-4">
        <%= paginate @events %>
      </div>
    </div>
  </div>
</div>