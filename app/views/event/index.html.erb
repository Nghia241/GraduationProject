<div class="container mt-4">
  <div class="row">
    <div class="col-md-9">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh Sách Sự Kiện</h2>
        <% if current_user.system_role_id != 3 %>
          <a class="btn btn-primary" href="<%= new_event_path %>">Tạo mới</a>
        <% end %>
      </div>
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>STT</th>
          <th>Tên sự kiện</th>
          <th>Địa chỉ</th>
          <th>Hành động</th>
        </tr>
        </thead>
        <tbody>
        <% @events.each_with_index do |event, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= event.name %></td>
            <td><%= event.location %></td>
            <td>
              <a href="<%= event_path(event) %>" class="btn btn-secondary">Chi tiết</a>
              <% if current_user.system_role_id == 1 %>
                <%= link_to 'Xóa', event_path(event), method: :delete, data: { confirm: 'Bạn có chắc chắn muốn xóa?' }, class: 'btn btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="mt-3">
        <%= paginate @events %>
      </div>
    </div>
  </div>
</div>
