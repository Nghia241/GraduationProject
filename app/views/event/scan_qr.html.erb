<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h3 class="text-center">Quét QR Code</h3>
    </div>
    <div class="card-body">
      <!-- Hiển thị hình ảnh từ camera -->
      <div id="reader"></div>
      <div id="alert-container" class="mt-3"></div>
    </div>
  </div>
</div>

<!-- Thêm âm thanh -->
<audio id="success-sound" src="success.mp3" preload="auto"></audio>
<audio id="error-sound" src="error.mp3" preload="auto"></audio>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/html5-qrcode/minified/html5-qrcode.min.js"></script>
<script>
    $(document).ready(function () {
        // Hàm hiển thị thông báo
        function showAlert(message, type) {
            const alertHtml = `
        <div class="alert alert-${type} text-center fs-4" role="alert">
          ${message}
        </div>
      `;
            $('#alert-container').html(alertHtml);

            // Ẩn thông báo sau 3 giây
            setTimeout(() => {
                $('#alert-container').fadeOut('slow', function () {
                    $(this).html('').show(); // Xóa nội dung sau khi ẩn
                });
            }, 3000);
        }

        // Hàm phát âm thanh
        function playSound(soundId) {
            const sound = document.getElementById(soundId);
            if (sound) {
                sound.currentTime = 0;
                sound.play();
            }
        }

        // Hàm xử lý khi QR Code được quét thành công
        function onScanSuccess(decodedText, decodedResult) {
            console.log(`QR Code scanned: ${decodedText}`);

            // Hiển thị thông báo thành công và phát âm thanh
            showAlert(`QR Code quét thành công: ${decodedText}`, "success");
            playSound("success-sound");

            // Gửi chuỗi giải mã đến backend để kiểm tra
            $.ajax({
                url: '<%=decode_event_path(@event)%>',
                method: 'POST',
                dataType: 'json',
                data: {
                    qr_data: decodedText
                },
                headers: {
                    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
                },
                success: function (response) {
                    showAlert(response.message, "success");
                },
                error: function (xhr, status, error) {
                    console.error("Error: ", error);
                    showAlert("Có lỗi xảy ra trong quá trình xử lý.", "danger");
                    playSound("error-sound");
                }
            });
        }

        // Khởi tạo QR Scanner và hiển thị camera
        const html5QrCode = new Html5Qrcode("reader");

        html5QrCode.start(
          { facingMode: "environment" }, // Sử dụng camera sau (hoặc "user" cho camera trước)
          {
              fps: 1, // Số khung hình mỗi giây
              qrbox: 600 // Kích thước vùng quét QR
          },
          onScanSuccess // Hàm callback khi quét thành công
        ).catch((err) => {
            console.error("Không thể khởi động camera: ", err);
            showAlert("Không thể khởi động camera.", "danger");
            playSound("error-sound");
        });
    });
</script>
