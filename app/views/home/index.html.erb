<div class="container pt-5">
  <h2 class="d-none d-md-block">THÔNG SỐ TỔNG QUAN</h2>
  <h2 class="d-block d-md-none text-center">THÔNG SỐ TỔNG QUAN</h2>

  <div class="row mt-5">
    <!-- Tổng số Admin -->
    <div class="col-md-4">
      <div class="card text-white bg-primary mb-3">
        <div class="card-header">Số Super Admin</div>
        <div class="card-body">
          <h2 class="card-title"><%= @super_admin_count %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card text-white bg-primary mb-3">
        <div class="card-header">Số Admin</div>
        <div class="card-body">
          <h2 class="card-title"><%= @admin_count %></h2>
        </div>
      </div>
    </div>

    <!-- Tổng số Người dùng -->
    <div class="col-md-4">
      <div class="card text-white bg-success mb-3">
        <div class="card-header">Số Người dùng</div>
        <div class="card-body">
          <h2 class="card-title"><%= @user_count %></h2>
        </div>
      </div>
    </div>

    <!-- Tổng số Sự kiện -->
    <div class="col-md-4">
      <div class="card text-white bg-info mb-3">
        <div class="card-header">Số Sự kiện</div>
        <div class="card-body">
          <h2 class="card-title"><%= @event_count %></h2>
        </div>
      </div>
    </div>

    <!-- Số Sự kiện Sắp tới -->
    <div class="col-md-4">
      <div class="card text-white bg-warning mb-3">
        <div class="card-header">Sự kiện Sắp tới</div>
        <div class="card-body">
          <h2 class="card-title"><%= @upcoming_events_count %></h2>
        </div>
      </div>
    </div>
    <!-- Số Sự kiện Đã xảy ra -->
    <div class="col-md-4">
      <div class="card text-white bg-danger mb-3">
        <div class="card-header">Sự kiện Đã xảy ra</div>
        <div class="card-body">
          <h2 class="card-title"><%= @past_events_count %></h2>
        </div>
      </div>
    </div>

  </div>
</div>