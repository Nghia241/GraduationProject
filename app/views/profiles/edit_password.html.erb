<div class="container mt-5 p-2">
  <h2 class="d-none d-md-block mb-3 text-center text-primary">
    <i class="fas fa-lock me-2"></i>THAY ĐỔI MẬT KHẨU
  </h2>
  <h2 class="d-block d-md-none text-center mb-3 mt-3 text-primary">
    <i class="fas fa-lock"></i>
  </h2>
  <div class="row">
    <div class="col-md-3 mb-4">
      <!-- Sidebar -->
      <div class="list-group shadow-sm">
        <a href="<%= profile_path %>" class="list-group-item list-group-item-action">
          <i class="fas fa-user-circle me-2"></i>Thông tin cá nhân
        </a>
        <a href="<%= edit_password_profile_path %>" class="list-group-item list-group-item-action active">
          <i class="fas fa-lock me-2"></i>Đổi mật khẩu
        </a>
      </div>
    </div>
    <div class="col-md-9">
      <!-- Form đổi mật khẩu -->
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <i class="fas fa-key me-2"></i>Đổi mật khẩu
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: update_password_profile_path, method: :patch, local: true do |f| %>
            <div class="mb-3">
              <label class="form-label">
                <i class="fas fa-key me-2 text-primary"></i>Mật khẩu hiện tại
              </label>
              <%= f.password_field :current_password, class: "form-control", placeholder: "Nhập mật khẩu hiện tại" %>
            </div>
            <div class="mb-3">
              <label class="form-label">
                <i class="fas fa-lock me-2 text-primary"></i>Mật khẩu mới
              </label>
              <%= f.password_field :password, class: "form-control", placeholder: "Nhập mật khẩu mới" %>
            </div>
            <div class="mb-3">
              <label class="form-label">
                <i class="fas fa-lock me-2 text-primary"></i>Xác nhận mật khẩu mới
              </label>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Nhập lại mật khẩu mới" %>
            </div>
            <div class="d-grid gap-2">
              <%= f.submit "Xác nhận", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Font Awesome CDN -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
