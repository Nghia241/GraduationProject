<div class="container mt-5 p-2">
  <h2 class="d-none d-md-block mb-3">THAY ĐỔI MẬT KHẨU </h2>
  <h2 class="d-block d-md-none text-center mb-3 mt-3"></h2>
  <div class="row">
    <div class="col-md-3">
      <!-- Sidebar -->
      <div class="list-group">
        <a href="<%= profile_path %>" class="list-group-item list-group-item-action">Thông tin cá nhân</a>
        <a href="<%= edit_password_profile_path %>" class="list-group-item list-group-item-action active">Đổi mật khẩu</a>
        <a href="<%= destroy_user_session_path %>" class="list-group-item list-group-item-action text-danger">Đăng xuất</a>
      </div>
    </div>
    <div class="col-md-9">
      <!-- Form đổi mật khẩu -->
      <div class="card">
        <div class="card-header bg-primary text-white">Đổi mật khẩu</div>
        <div class="card-body">
          <%= form_with model: @user, url: update_password_profile_path, method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :current_password, "Mật khẩu hiện tại" %>
              <%= f.password_field :current_password, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :password, "Mật khẩu mới" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :password_confirmation, "Xác nhận mật khẩu mới" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
            <%= f.submit "Xác nhận", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
