<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <!-- Sidebar -->
      <div class="list-group">
        <a href="<%= profile_path %>" class="list-group-item list-group-item-action active">Thông tin cá nhân</a>
        <a href="<%= edit_password_profile_path %>" class="list-group-item list-group-item-action">Đổi mật khẩu</a>
        <a href="<%= destroy_user_session_path %>" class="list-group-item list-group-item-action text-danger">Đăng xuất</a>
      </div>
    </div>
    <div class="col-md-9">
      <!-- Form thông tin cá nhân -->
      <div class="card">
        <div class="card-header bg-primary text-white">Thông tin cá nhân</div>
        <div class="card-body">
          <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :name, "Họ và tên" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :email, "Email" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :language_id, "Ngôn ngữ" %>
              <%= f.select :language_id, options_for_select([["Tiếng Anh", 1], ["Tiếng Việt", 2]], @user.language_id),
                           { prompt: "Chọn ngôn ngữ" },
                           { class: "form-control" } %>
            </div>
            <%= f.submit "Xác nhận", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
